{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts",
    "config/**/*.ts"
  ]
}
